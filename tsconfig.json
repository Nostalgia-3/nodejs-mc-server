{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "dist",
        "esModuleInterop": true
    },

    "include": [
        "src/**/*.ts"
    ],

    "exclude": [
        "node_modules/**",
        "docs"
    ]
}